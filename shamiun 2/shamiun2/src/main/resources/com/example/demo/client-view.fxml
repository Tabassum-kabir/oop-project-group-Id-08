<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="ap_main" prefHeight="583.0" prefWidth="900.0" style="-fx-background-color: #d6e8ef; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ClientController">

    <!-- Application Title -->
    <Label layoutX="231.0" layoutY="14.0" style="-fx-text-fill: #0a2d5e; -fx-font-size: 35; -fx-font-weight: bold; -fx-font-family: 'Monospace';" text="SuperMarket Messenger">
    </Label>



    <!-- Scroll Pane for Messages -->
    <ScrollPane fx:id="sp_main" fitToWidth="true" layoutX="20.0" layoutY="70.0" prefHeight="382.0" prefWidth="666.0" style="-fx-border-color: darkblue; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-color: lightblue; -fx-background-radius: 10;">

        <VBox fx:id="vbox_messages" prefHeight="374.0" prefWidth="660.0" style="-fx-padding: 20; -fx-border-color: darkblue; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-color: lightblue; -fx-background-radius: 10; -fx-background-radius: 0;" />

    </ScrollPane>

    <!-- Message Input Field -->
    <TextField fx:id="tf_message" layoutX="21.0" layoutY="472.0" prefHeight="42.0" prefWidth="552.0" promptText="Type your message here..." style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10; -fx-font-family: 'Monospace'; -fx-font-size: 14px; -fx-text-fill: black; -fx-background-radius: 5;">

        <font>

            <Font size="14" />

        </font>

    </TextField>

    <!-- Send Button -->
    <Button fx:id="button_send" layoutX="586.0" layoutY="472.0" prefHeight="42.0" prefWidth="100.0" style="-fx-border-color: green; -fx-border-width: 2; -fx-background-color: lightgreen; -fx-background-radius: 5; -fx-font-family: 'Monospace'; -fx-font-size: 16px; -fx-text-fill: black; -fx-border-radius: 3;" text="Send">

        <font>

            <Font name="Monospace" size="16" />

        </font>

    </Button>
    <Button fx:id="back_customerBtn" layoutX="740.0" layoutY="139.0" mnemonicParsing="false" onAction="#backTocustomer" prefHeight="34.0" prefWidth="134.0" style="-fx-border-color: green; -fx-border-width: 2; -fx-background-color: lightgreen; -fx-background-radius: 5; -fx-font-family: 'Monospace'; -fx-font-size: 14px; -fx-text-fill: black; -fx-border-radius: 3;" text="Customer page" />
    <Button fx:id="clientlogout" layoutX="741.0" layoutY="203.0" mnemonicParsing="false" onAction="#ClientLogOut" prefHeight="30.0" prefWidth="134.0" style="-fx-border-color: green; -fx-border-width: 2; -fx-background-color: lightgreen; -fx-background-radius: 5; -fx-font-family: 'Monospace'; -fx-font-size: 14px; -fx-text-fill: black; -fx-border-radius: 3;" text="Log out" />

</AnchorPane>
