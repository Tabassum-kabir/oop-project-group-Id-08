<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="prod_form" prefHeight="208.0" prefWidth="221.0" style="-fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 8, 0, 0, 0); -fx-background-radius: 8; -fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.CartController">
   <children>
      <VBox layoutX="4.0" prefHeight="208.0" prefWidth="214.0" spacing="10.0" style="-fx-padding: 10;">
         <children>
            <!-- Product Name and Price -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="prod_name" prefHeight="27.0" prefWidth="101.0" style="-fx-text-fill: #333; -fx-font-size: 18; -fx-font-weight: bold; -fx-font-family: 'Monospace';" text="Name" />
                  <Label fx:id="prod_price" prefHeight="27.0" prefWidth="95.0" style="-fx-text-fill: #4caf50; -fx-font-size: 18; -fx-font-weight: bold; -fx-font-family: 'Monospace';" text="0.0" />
               </children>
            </HBox>

            <!-- Spinner and Add to Cart Button -->
            <HBox alignment="CENTER" spacing="10.0">
               <!-- You can add a Spinner and Button here if needed -->
            </HBox>

            <!-- Product Image -->
            <AnchorPane prefHeight="160.0" prefWidth="160.0" style="-fx-background-color: white; -fx-background-radius: 8;">
               <children>
                  <ImageView fx:id="prod_imageView" fitHeight="153.0" fitWidth="194.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" style="-fx-alignment: center; -fx-background-radius: 8;" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
